name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Path to the input file (CSV)
        type: string

      output_artifact:
        description:  Path where the cleaned data will be saved
        type: string

      output_type:
        description: Type of the output artifact (e.g., 'csv').
        type: string

      output_description:
        description: Description of the output artifact
        type: string

      min_price:
        description: Minimum price to consider.
        type: string

      max_price:
        description: Maximum price to consider.
        type: string


    command: >-
        python basic_cleaning.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
